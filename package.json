{
  "name": "anvil",
  "version": "2.1.0",
  "description": "Product Requirements Document management application for Capabilities and Enablers",
  "main": "server.js",
  "author": "Darcy Davidson",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/darcydjr/anvil.git"
  },
  "homepage": "https://github.com/darcydjr/anvil#readme",
  "bugs": {
    "url": "https://github.com/darcydjr/anvil/issues"
  },
  "keywords": [
    "prd",
    "product-requirements",
    "capabilities",
    "enablers",
    "documentation",
    "markdown",
    "react",
    "nodejs",
    "claude-code"
  ],
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:start": "npm run build && npm start",
    "install:all": "npm install && cd client && npm install",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "version:sync": "node -e \"const pkg=require('./package.json'); const clientPkg=require('./client/package.json'); clientPkg.version=pkg.version; require('fs').writeFileSync('./client/package.json', JSON.stringify(clientPkg, null, 2));\"",
    "test": "jest",
    "test:integration": "jest tests/integration/",
    "test:parallel": "jest tests/integration/parallel-development/",
    "test:realtime": "jest tests/feature-teams/realtime-collaboration/",
    "test:ai-workflow": "jest tests/feature-teams/ai-workflow/",
    "test:performance": "node scripts/performance-test.js",
    "test:regression": "node tests/performance/regression-detector.js",
    "test:feature-performance": "node tests/performance/feature-performance-monitor.js",
    "performance:baseline": "node tests/performance/regression-detector.js --create-baseline",
    "performance:feature-baseline": "node tests/performance/feature-performance-monitor.js --create-baseline",
    "quality:gates": "node scripts/quality-gates.js",
    "quality:gates-strict": "node scripts/quality-gates.js --strict",
    "validate": "node scripts/validate-integration.js",
    "validate:ci": "node scripts/validate-integration.js --ci",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "fs-extra": "^11.1.1",
    "helmet": "^7.0.0",
    "marked": "^9.1.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "maxWorkers": 1,
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/client/build/**"
    ]
  }
}
